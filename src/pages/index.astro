---
import "../scripts/main.js";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Juan Jose Castro Sarria | AI & Backend Engineer</title>
    <meta
      name="description"
      content="AI & Backend Engineer building production-ready systems with machine learning, scalable APIs, and cloud deployments."
    />
    <meta name="author" content="Juan Jose Castro Sarria" />
    <meta name="theme-color" content="#0c0c0c" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Juan Jose Castro Sarria | AI & Backend Engineer" />
    <meta
      property="og:description"
      content="AI & Backend Engineer building production-ready systems with machine learning, scalable APIs, and cloud deployments."
    />
    <meta property="og:locale" content="en_US" />
    <meta property="og:image" content="/og-image.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Juan Jose Castro Sarria | AI & Backend Engineer" />
    <meta
      name="twitter:description"
      content="AI & Backend Engineer building production-ready systems with machine learning, scalable APIs, and cloud deployments."
    />
    <meta name="twitter:image" content="/og-image.png" />
    <link rel="stylesheet" href="styles.css" />
    <link rel="stylesheet" href="/shared/demo-shell.css" />
  </head>
  <body>
    <!-- Neural network canvas background -->
    <canvas id="neural-canvas" aria-hidden="true"></canvas>

    <!-- Hero: Terminal intro -->
    <section class="section hero-section" id="hero">
      <div class="terminal-block">
        <div class="terminal-header">
          <span class="terminal-dot red"></span>
          <span class="terminal-dot yellow"></span>
          <span class="terminal-dot green"></span>
          <span class="terminal-title">jj@portfolio ~ %</span>
        </div>
        <div class="terminal-body">
          <div class="terminal-line" id="line-cmd">
            <span class="prompt">&gt;</span> <span class="cmd-text"></span>
          </div>
          <div class="terminal-line terminal-blank" id="line-blank"></div>
          <div class="terminal-line" id="line-name"><span class="name-text"></span></div>
          <div class="terminal-line" id="line-role"><span class="role-text"></span></div>
          <div class="terminal-line terminal-blank" id="line-blank2"></div>
          <div class="terminal-line" id="line-tagline1"><span class="tagline1-text"></span></div>
          <div class="terminal-line" id="line-tagline2"><span class="tagline2-text"></span></div>
          <span class="cursor" id="cursor">_</span>
        </div>
      </div>
      <div class="scroll-hint" id="scroll-hint">
        <span>scroll to explore</span>
        <svg width="16" height="24" viewBox="0 0 16 24" fill="none">
          <rect x="1" y="1" width="14" height="22" rx="7" stroke="currentColor" stroke-width="1.5" />
          <circle cx="8" cy="7" r="2" fill="currentColor" class="scroll-dot" />
        </svg>
      </div>
    </section>

    <!-- About + Stats -->
    <section class="section about-section" id="about">
      <div class="about-grid">
        <div class="about-bio">
          <h2 class="section-label">// about</h2>
        <p class="bio-text">
          I&apos;m an AI and backend engineer focused on building production-ready systems that combine machine
          learning with scalable architectures. From LLM integrations and sentiment analysis systems to API design
          and cloud deployments, I bridge intelligent models with real-world business applications.
        </p>
        <p class="bio-text">
          Currently working on AI-driven sentiment analysis platforms, automation systems, and scalable backend
          infrastructures.
        </p>
        </div>
        <div class="about-stats">
          <div class="stat-card">
            <span class="stat-number" data-target="4" data-suffix="+">0</span>
            <span class="stat-label">Years of Experience</span>
          </div>
          <div class="stat-card">
            <span class="stat-number" data-target="20" data-suffix="+">0</span>
            <span class="stat-label">Projects shipped</span>
          </div>
          <div class="stat-card">
            <span class="stat-number" data-value="∞">∞</span>
            <span class="stat-label">Coffees consumed</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Projects -->
    <section class="section projects-section" id="projects">
      <h2 class="section-label">// projects</h2>

      <div class="project-card" data-project="neurovox">
        <div class="project-content">
          <h3 class="project-title">SentimentalReview</h3>
          <p class="project-desc">
            AI-powered sentiment analysis platform for companies. Processes psychological and open-ended survey
            responses using LLMs to generate structured insights and analytics dashboards.
          </p>
          <div class="project-tags">
            <span class="tech-tag">NextJS</span>
            <span class="tech-tag">React</span>
            <span class="tech-tag">PostgreSQL</span>
            <span class="tech-tag">N8N</span>
            <span class="tech-tag">LLM</span>
            <span class="tech-tag">Vercel</span>
          </div>
        </div>
        <div class="project-viz">
          <canvas class="viz-canvas" id="viz-neurovox" aria-hidden="true"></canvas>
        </div>
      </div>

      <div class="project-card" data-project="foodhy">
        <div class="project-content">
          <h3 class="project-title">Foodhy</h3>
          <p class="project-desc">
           Foodhy helps people make informed nutrition choices through recipes, expert insights, and a supportive community..
          </p>
          <div class="project-tags">
            <span class="tech-tag">NestJs</span>
            <span class="tech-tag">React</span>
            <span class="tech-tag">GraphQL</span>
            <span class="tech-tag">Swagger</span>
            <span class="tech-tag">Vercel</span>
          </div>
        </div>
        <div class="project-viz">
          <canvas class="viz-canvas" id="viz-foodhy" aria-hidden="true"></canvas>
        </div>
      </div>

      <div class="project-card" data-project="opencart">
        <div class="project-content">
          <h3 class="project-title">OpenCart</h3>
          <p class="project-desc">
            This project consists of a set of automated tests developed in Java using Selenium WebDriver,
            with the goal of evaluating the OpenCart demo website.
          </p>
          <div class="project-tags">
            <span class="tech-tag">Java</span>
            <span class="tech-tag">Selenium WebDriver</span>
            <span class="tech-tag">Maven</span>
            <span class="tech-tag">Apache POI</span>
          </div>
        </div>
        <div class="project-viz">
          <canvas class="viz-canvas" id="viz-opencart" aria-hidden="true"></canvas>
        </div>
      </div>

      <div class="project-card" data-project="deepsight">
        <div class="project-content">
          <h3 class="project-title">SenaviaCorp</h3>
          <p class="project-desc">
            Senavia is a South Florida web design and digital marketing agency helping businesses grow through professional websites
            and data-driven strategies.
          </p>
          <div class="project-tags">
            <span class="tech-tag">NextJS</span>
            <span class="tech-tag">PostgreSQL</span>
            <span class="tech-tag">N8N</span>
            <span class="tech-tag">Shadcn</span>
            <span class="tech-tag">Zod</span>
            <span class="tech-tag">Axios</span>
            <span class="tech-tag">Nodemailer</span>
            <span class="tech-tag">Swagger</span>
          </div>
        </div>
        <div class="project-viz">
          <canvas class="viz-canvas" id="viz-deepsight" aria-hidden="true"></canvas>
        </div>
      </div>

      <div class="project-card" data-project="synthmind">
        <div class="project-content">
          <h3 class="project-title">Automation &amp; AI Agents</h3>
          <p class="project-desc">
            Custom AI agents with short-term memory architectures, context optimization, and PostgreSQL-based
            persistence layer. Designed to reduce token usage and improve reasoning continuity.
          </p>
          <div class="project-tags">
            <span class="tech-tag">LangChain</span>
            <span class="tech-tag">PostgreSQL</span>
            <span class="tech-tag">TypeScript</span>
            <span class="tech-tag">LLM APIs</span>
          </div>
        </div>
        <div class="project-viz">
          <canvas class="viz-canvas" id="viz-synthmind" aria-hidden="true"></canvas>
        </div>
      </div>
    </section>

    <!-- Contact terminal -->
    <section class="section contact-section" id="contact">
      <div class="terminal-block contact-terminal">
        <div class="terminal-header">
          <span class="terminal-dot red"></span>
          <span class="terminal-dot yellow"></span>
          <span class="terminal-dot green"></span>
          <span class="terminal-title">jj@contact ~ %</span>
        </div>
        <div class="terminal-body">
          <div class="terminal-line"><span class="prompt">&gt;</span> <span class="contact-cmd"></span></div>
          <div class="terminal-line terminal-blank"></div>
          <div class="contact-lines">
            <div class="terminal-line"><span class="contact-line" data-line="0"></span></div>
            <div class="terminal-line"><span class="contact-line" data-line="1"></span></div>
            <div class="terminal-line"><span class="contact-line" data-line="2"></span></div>
          </div>
          <div class="terminal-line terminal-blank"></div>
          <div class="terminal-line"><span class="prompt">&gt;</span> <span class="cursor contact-cursor">_</span></div>
        </div>
      </div>
    </section>

    
  </body>
</html>
